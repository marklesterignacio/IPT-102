@page "/products"
@inject NavigationManager NavigationManager
<PageTitle>Our Products</PageTitle>

<h1>Our Products</h1>

<section class="product-container">
    <div class="product">
        <h3>Gaming Laptop</h3>
        <img src="/pictures/gaminglaptop.jpg" alt="Gaming Laptop" />
        <p>Price: $1,299.99</p>
        <h4>Specifications:</h4>
        <ul>
            <li>Processor: Intel i7</li>
            <li>RAM: 16 GB</li>
            <li>Storage: 512 GB SSD</li>
            <li>Graphics: NVIDIA GTX 1660</li>
        </ul>
        <button class="add-to-cart" @onclick="@(() => AddToCart("Gaming Laptop"))">Add to Cart</button>
        <button class="buy-now" @onclick="@(() => BuyProduct("Gaming Laptop"))">Buy Now</button>
    </div>

    <div class="product">
        <h3>Desktop PC</h3>
        <img src="/pictures/desktoppc.jpg" alt="Desktop PC" />
        <p>Price: $899.99</p>
        <h4>Specifications:</h4>
        <ul>
            <li>Processor: AMD Ryzen 5</li>
            <li>RAM: 8 GB</li>
            <li>Storage: 1 TB HDD</li>
            <li>Graphics: Integrated</li>
        </ul>
        <button class="add-to-cart" @onclick="@(() => AddToCart("Desktop PC"))">Add to Cart</button>
        <button class="buy-now" @onclick="@(() => BuyProduct("Desktop PC"))">Buy Now</button>
    </div>

    <div class="product">
        <h3>2-in-1 Laptop</h3>
        <img src="/pictures/2in1laptop.jpg" alt="2-in-1 Laptop" />
        <p>Price: $749.99</p>
        <h4>Specifications:</h4>
        <ul>
            <li>Processor: Intel i5</li>
            <li>RAM: 8 GB</li>
            <li>Storage: 256 GB SSD</li>
            <li>Display: Touchscreen</li>
        </ul>
        <button class="add-to-cart" @onclick="@(() => AddToCart("2-in-1 Laptop"))">Add to Cart</button>
        <button class="buy-now" @onclick="@(() => BuyProduct("2-in-1 Laptop"))">Buy Now</button>
    </div>

    <div class="product">
        <h3>Gaming Monitor</h3>
        <img src="/pictures/gamingmonitor.jpg" alt="Gaming Monitor" />
        <p>Price: $299.99</p>
        <h4>Specifications:</h4>
        <ul>
            <li>Size: 27 inches</li>
            <li>Resolution: 2560 x 1440</li>
            <li>Refresh Rate: 144 Hz</li>
        </ul>
        <button class="add-to-cart" @onclick="@(() => AddToCart("Gaming Monitor"))">Add to Cart</button>
        <button class="buy-now" @onclick="@(() => BuyProduct("Gaming Monitor"))">Buy Now</button>
    </div>

    <div class="product">
        <h3>Mechanical Keyboard</h3>
        <img src="/pictures/mechanicalkeyboard.jpg" alt="Mechanical Keyboard" />
        <p>Price: $129.99</p>
        <h4>Specifications:</h4>
        <ul>
            <li>Switch Type: Cherry MX Red</li>
            <li>Backlit: RGB</li>
            <li>Connectivity: Wired</li>
        </ul>
        <button class="add-to-cart" @onclick="@(() => AddToCart("Mechanical Keyboard"))">Add to Cart</button>
        <button class="buy-now" @onclick="@(() => BuyProduct("Mechanical Keyboard"))">Buy Now</button>
    </div>
</section>

@if (!string.IsNullOrEmpty(successMessage))
{
    <p class="success-message">@successMessage</p>
}

<section class="media">
    <h2>Watch Our Product Video</h2>
    <iframe width="600" height="400" src="https://www.youtube.com/embed/Lpz98bCaE_A?si=cKp8CxcvXDV6p-6s" frameborder="0" allowfullscreen></iframe>

    <h2>Listen to Our Background Music</h2>
    <audio controls autoplay loop>
        <source src="music/Lady%20Gaga,%20Bruno%20Mars%20-%20Die%20With%20A%20Smile%20(Official%20Music%20Video).mp3" type="audio/mpeg">
        Your browser does not support the audio element.
    </audio>
</section>

<footer>
    <p>&copy; 2024 Online Computer Store. All rights reserved.</p>
</footer>

@code {
    private string? successMessage;

    private void BuyProduct(string productName)
    {
        successMessage = $"{productName} has been successfully purchased!";
    }

    private void AddToCart(string productName)
    {
        successMessage = $"{productName} has been added to your cart!";
    }
}

<style>
    .add-to-cart {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        transition: background-color 0.3s, transform 0.2s;
    }

        .add-to-cart:hover {
            background-color: #0056b3;
        }

        .add-to-cart:active {
            transform: scale(0.95);
        }

    .buy-now {
        background-color: #28a745;
        color: white;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        transition: background-color 0.3s, transform 0.2s;
    }

        .buy-now:hover {
            background-color: #218838;
        }

        .buy-now:active {
            transform: scale(0.95);
        }

    .success-message {
        color: green;
        font-weight: bold;
        margin-top: 10px;
    }
</style>
